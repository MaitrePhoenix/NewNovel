<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.main.MainActivity">

    <TextView
        android:id="@+id/nbrNovel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de novels : 0"/>

    <TextView
        android:layout_below="@+id/nbrNovel"
        android:id="@+id/chargementtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chargement"/>

    <RelativeLayout
        android:id="@+id/layoutRecherche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@+id/chargementtxt">

        <Button
            android:id="@+id/trier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trier (A-Z)"
            android:layout_alignParentRight="true"/>

        <SearchView
            android:id="@+id/recherche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/trier"/>

    </RelativeLayout>

    <ListView
        android:layout_below="@+id/layoutRecherche"
        android:layout_above="@+id/toolbar"
        android:id="@+id/listNovel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </ListView>

    <include
        android:layout_alignParentBottom="true"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/tool_bar" />

</RelativeLayout>