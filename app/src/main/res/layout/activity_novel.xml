<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.novel.NovelActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Titre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/boutonDownload"
            android:text="" />

        <ImageButton
            android:id="@+id/boutonDownload"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:src="@mipmap/download_icone"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@+id/boutonFavori"/>

        <ImageButton
            android:id="@+id/boutonFavori"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/favori_no_icone"
            android:scaleType="fitCenter"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="120dp"
            android:layout_height="169dp"/>

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/synopsis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="8"
                    android:text="Chargement" />

                <TextView
                    android:layout_toRightOf="@+id/image"
                    android:id="@+id/lireSuite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="toucher pour agrandir"/>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <TextView
        android:id="@+id/rythmeParution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone" />

    <TextView
        android:id="@+id/traducteurAuteur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone" />

    <TextView
        android:id="@+id/classification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/Team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/messageAucunChapitre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\n\nAucun chapitre n'a été trouvé, vérifiez sur le site si c'est normal, si ce n'est pas le cas et que le problème persiste, merci de l'indiquer sur le discord"
        android:visibility="gone" />

    <ListView
        android:id="@+id/ListChapitre"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>